    <section class="mt-50 mb-50">
      <div class="container">
          <div class="row product-grid-3">
              <% for (let i = 0; i < products.length; i++) { %>
              <!-- Product Card -->
              <div class="col-lg-4 col-md-6 col-sm-6 col-12 mb-4">
                  <div class="card product-cart-wrap shadow-sm">
                      <div class="product-img-action-wrap">
                          <div class="product-img product-img-zoom">
                              <a href="/productDetails/<%= products[i]._id %>">
                                  <img class="card-img-top default-img" src="/uploads/re-image/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                                  <img class="hover-img" src="/uploads/re-image/<%= products[i].productImage[1] %>" alt="<%= products[i].productName %>">
                              </a>
                          </div>
                          <div class="product-action-1">
                              <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                                  <i class="fi-rs-search"></i>
                              </a>
                              <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/addToWishlist?id=<%= products[i]._id %>">
                                  <i class="fi-rs-heart"></i>
                              </a>
                              <a aria-label="Compare" class="action-btn hover-up" href="/compare?id=<%= products[i]._id %>">
                                  <i class="fi-rs-shuffle"></i>
                              </a>
                          </div>
                          <div class="product-badges product-badges-position product-badges-mrg">
                              <!-- Optional: <span class="badge bg-danger">Hot</span> -->
                          </div>
                      </div>
                      <div class="card-body">
                          <div class="product-category">
                              <a href="/shop?category=<%= products[i].category %>" class="text-muted"><%= products[i].category %></a>
                          </div>
                          <h5 class="card-title">
                              <a href="/productDetails/<%= products[i]._id %>" class="text-dark"><%= products[i].productName %></a>
                          </h5>
                          <div class="rating-result" title="<%= products[i].rating %>%">
                              <span><%= products[i].rating %>%</span>
                          </div>
                          <div class="product-price">
                              <span class="text-success">$<%= products[i].salePrice %></span>
                              <% if (products[i].salePrice < products[i].originalPrice) { %>
                                  <span class="text-muted text-decoration-line-through">$<%= products[i].originalPrice %></span>
                              <% } %>
                          </div>
                          <!-- Add To Cart Button -->
                          <div class="product-action-1 show mt-3">
                              <a aria-label="Add To Cart" class="action-btn hover-up" href="/addToCart?id=<%= products[i]._id %>">
                                  <i class="fi-rs-shopping-bag-add"></i>
                              </a>
                          </div>
                      </div>
                  </div>
              </div>
              <% } %>
          </div>
      </div>
  </section>
    

    <section class="section-padding">
      <div class="container wow fadeIn animated">
        <h3 class="section-title mb-20"><span>New</span> Arrivals</h3>
        <div class="carausel-6-columns-cover position-relative">
          <div
            class="slider-arrow slider-arrow-2 carausel-6-columns-arrow"
            id="carausel-6-columns-2-arrows"
          ></div>
          <div
            class="carausel-6-columns carausel-arrow-center"
            id="carausel-6-columns-2"
          >
          <% for(let i = 0 ; i < products.length ; i++) {%>
            <div class="product-cart-wrap small hover-up">
              <div class="product-img-action-wrap">
                <div class="product-img product-img-zoom">

                  <a href="/productDetails/<%= products[i]._id %>">
                    <img
                      class="default-img"
                      src="/uploads/re-image/<%= products[i].productImage[0] %>"
                      alt="<%= products[i].productName %>"
                    />
                    <img
                      class="hover-img"
                      src="assets/imgs/shop/product-2-2.jpg"
                      alt=""
                    />
                  </a>
                </div>
                <div class="product-action-1">
                  <a
                    aria-label="Quick view"
                    class="action-btn small hover-up"
                    data-bs-toggle="modal"
                    data-bs-target="#quickViewModal"
                  >
                    <i class="fi-rs-eye"></i
                  ></a>
                  <a
                    aria-label="Add To Wishlist"
                    class="action-btn small hover-up"
                    href="/addToWishlist?id=<%= products[i]._id %>"
                    tabindex="0"
                    ><i class="fi-rs-heart"></i
                  ></a>
                  <a
                    aria-label="Compare"
                    class="action-btn small hover-up"
                    href="shop-compare.html"
                    tabindex="0"
                    ><i class="fi-rs-shuffle"></i
                  ></a>
                </div>
                <div
                  class="product-badges product-badges-position product-badges-mrg"
                >
                  <span class="hot">Hot</span>
                </div>
              </div>
              <div class="product-content-wrap">
                <h2>
                  <a href="shop-product-right.html"><%= products[i].productName %></a>
                </h2>
                <div class="rating-result" title="90%">
                  <span> </span>
                </div>
                <div class="product-price">
                  <span><%= products[i].salePrice %></span>
                  <span class="old-price">$245.8</span>
                </div>
                <a href="/addToCart?id=<%= products[i]._id %>">Add to Cart</a>
              </div>
            </div>
            
          <% } %>  
          </div>
        </div>
      </div>
    </section>
  </main>

