<script>
    function validateForm() {
        let isValid = true;
        
        // Clear all previous errors
        document.querySelectorAll(".error").forEach(el => el.textContent = "");

        // Regular expressions for validation
        const textRegex = /^[a-zA-Z\s]+$/;
        const pincodeRegex = /^[0-9]{6}$/;
        const phoneRegex = /^[0-9]{10}$/;

        // Address Type
        const addressType = document.getElementById("addressType").value;
        if (!textRegex.test(addressType)) {
            document.getElementById("addressTypeError").textContent = "Invalid address type.";
            isValid = false;
        }

        // Name
        const name = document.getElementById("name").value;
        if (!textRegex.test(name)) {
            document.getElementById("nameError").textContent = "Name should contain only letters.";
            isValid = false;
        }

        // City
        const city = document.getElementById("city").value;
        if (!textRegex.test(city)) {
            document.getElementById("cityError").textContent = "City should contain only letters.";
            isValid = false;
        }

        // Landmark
        const landMark = document.getElementById("landMark").value;
        if (!landMark) {
            document.getElementById("landMarkError").textContent = "Landmark is required.";
            isValid = false;
        }

        // State
        const state = document.getElementById("state").value;
        if (!textRegex.test(state)) {
            document.getElementById("stateError").textContent = "State should contain only letters.";
            isValid = false;
        }

        // Pincode
        const pincode = document.getElementById("pincode").value;
        if (!pincodeRegex.test(pincode)) {
            document.getElementById("pincodeError").textContent = "Pincode should be a 6-digit number.";
            isValid = false;
        }

        // Phone
        const phone = document.getElementById("phone").value;
        if (!phoneRegex.test(phone)) {
            document.getElementById("phoneError").textContent = "Phone should be a 10-digit number.";
            isValid = false;
        }

        // Alternative Phone
        const altPhone = document.getElementById("altPhone").value;
        if (!phoneRegex.test(altPhone)) {
            document.getElementById("altPhoneError").textContent = "Alternative Phone should be a 10-digit number.";
            isValid = false;
        }

        return isValid;
    }

    const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            Swal.fire({
                title: 'Success!',
                text: 'Address added successfully.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                // Remove 'success' from URL to prevent repeated alerts
                const url = new URL(window.location.href);
                url.searchParams.delete('success');
                window.history.replaceState(null, null, url); // Update URL without reloading
            });
        }
        
</script>